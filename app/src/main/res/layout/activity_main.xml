<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hallie.diet.MainActivity"
    android:background="@drawable/index_bg">

    <ImageButton
        android:id="@+id/imgBtn_record"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/index_btn_record"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        android:layout_marginStart="7dp"
        android:onClick="click_record"/>

    <ImageButton
        android:id="@+id/imgBtn_cale"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/index_btn_calendar"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_record"
        android:layout_marginLeft="116dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginStart="116dp"
        android:onClick="click_cale"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.18"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />
</android.support.constraint.ConstraintLayout>
